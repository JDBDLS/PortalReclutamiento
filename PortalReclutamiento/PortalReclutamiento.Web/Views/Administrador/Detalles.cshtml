@using PortalReclutamiento.PortalReclutamiento.Domain.Models
@model Oferta

@{
    ViewData["Title"] = "Detalles de Oferta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1>Detalles de Oferta</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@Model.Titulo</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Empresa:</dt>
                        <dd class="col-sm-8">@Model.Empresa</dd>

                        <dt class="col-sm-4">Ubicación:</dt>
                        <dd class="col-sm-8">@Model.Ubicacion</dd>

                        <dt class="col-sm-4">Categoría:</dt>
                        <dd class="col-sm-8">@Model.Categoria</dd>

                        <dt class="col-sm-4">Salario:</dt>
                        <dd class="col-sm-8">$@Model.Salario.ToString("N2")</dd>

                        <dt class="col-sm-4">Fecha de Publicación:</dt>
                        <dd class="col-sm-8">@Model.FechaPublicacion.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>

            <h5 class="mt-4">Descripción:</h5>
            <p>@Model.Descripcion</p>
        </div>
        <div class="card-footer">
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>