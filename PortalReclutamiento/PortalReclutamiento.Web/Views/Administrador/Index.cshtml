@using PortalReclutamiento.PortalReclutamiento.Domain.Models
@model IEnumerable<Oferta>
@{
    ViewData["Title"] = "Administrador";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Administración de Ofertas</h1>
        <a asp-action="Crear" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Oferta
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Empresa</th>
                            <th>Ubicación</th>
                            <th>Salario</th>
                            <th>Categoría</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Titulo</td>
                                <td>@item.Empresa</td>
                                <td>@item.Ubicacion</td>
                                <td>$@item.Salario</td>
                                <td>@item.Categoria</td>
                                <td>@item.FechaPublicacion.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalles</a>
                                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                                        <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>