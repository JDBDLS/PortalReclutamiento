@using PortalReclutamiento.PortalReclutamiento.Domain.Models
@model Oferta
@{
    ViewData["Title"] = "Editar Oferta";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Panel de Control</a></li>
            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Ofertas">Ofertas</a></li>
            <li class="breadcrumb-item active" aria-current="page">Editar Oferta</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Editar Oferta</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Editar">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FechaPublicacion" />

                        <div class="mb-3">
                            <label asp-for="Titulo" class="form-label">Título</label>
                            <input asp-for="Titulo" class="form-control" />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Empresa" class="form-label">Empresa</label>
                            <input asp-for="Empresa" class="form-control" />
                            <span asp-validation-for="Empresa" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Ubicacion" class="form-label">Ubicación</label>
                            <input asp-for="Ubicacion" class="form-control" />
                            <span asp-validation-for="Ubicacion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Salario" class="form-label">Salario</label>
                            <input asp-for="Salario" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Salario" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Categoria" class="form-label">Categoría</label>
                            <input asp-for="Categoria" class="form-control" />
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label">Descripción</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Admin" asp-action="Ofertas" class="btn btn-secondary">Volver</a>
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}