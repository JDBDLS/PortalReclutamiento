@{
    ViewData["Title"] = "Consultar Mis Solicitudes";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Consultar Mis Solicitudes</h4>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Para consultar el estado de tus solicitudes de empleo, por favor ingresa el correo electrónico
                        que utilizaste al aplicar.
                    </p>
                    <form asp-action="IniciarSesion" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Consultar Solicitudes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>